<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>ClimateControl</defName>
		<thingClass>GCRD.ClimateControl</thingClass>
		<label>Климат контроль</label>
		<description>Система климат контроля. Устанавливает минимальную и максимальную комфортную температуру и удерживает ее.</description>
		<graphicData>
			<texPath>Things/ClimateControl/ClimateControl</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowInfo>
				<basewidth>0.5</basewidth>
				<baseHeight>0.5</baseHeight>
				<tallness>1.0</tallness>
			</shadowInfo>
		</graphicData>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<rotatable>false</rotatable>
		<fillPercent>1</fillPercent>
		<statBases>
			<WorkToMake>1000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<costList>
			<Steel>100</Steel>
		</costList>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<placeWorkers>
			<li>GCRD.PlaceWorker_ClimateControl</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
	</ThingDef>

</Buildings>